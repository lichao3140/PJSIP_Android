<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/devicelist_iv_devicepicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_device" />

        <TextView
            android:id="@+id/devicelist_tv_devicename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/devicelist_iv_devicepicture"
            android:singleLine="true"
            android:textColor="@color/title_bg"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/devicelist_tv_deviceid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/devicelist_iv_devicepicture"
            android:layout_alignLeft="@id/devicelist_tv_devicename"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="@color/doorbell_title"
            android:textSize="16sp" />
        
        <ImageView
	        android:id="@+id/devicelist_iv_next"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@mipmap/png_next" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/right_bg" >

        <TextView
            android:id="@+id/devicelist_btn_dele"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/devicelist_deleteselected"
            android:textSize="24sp"
            android:textColor="@color/white" 
            android:background="@drawable/button_bg"/>
    </RelativeLayout>

</LinearLayout>